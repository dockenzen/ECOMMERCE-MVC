@model TF_Base.Models.Registro

@{
    ViewBag.Title = "CustomerRegister";

    Layout = "~/Views/Shared/_eCommerceLayout.cshtml";
}

<div id="all">
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row d-flex align-items-center flex-wrap">
                <div class="col-md-7">
                    <h1 class="h2">Nueva Cuenta / Ingresar</h1>
                </div>
                <div class="col-md-5">
                    <ul class="breadcrumb d-flex justify-content-end">
                        <li class="breadcrumb-item">
                            @Html.ActionLink("Inicio", "Home", "Shared")
                        </li>
                        <li class="breadcrumb-item active">Nueva Cuenta / Ingresar</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="box">
                        <h2 class="text-uppercase">New account</h2>
                        <p class="lead">Todavía no estás registrado ?</p>
                        <p>
                            Registrate ahora para obtener muchas ofertas, no te tomará más de unos minutos !
                        </p>
                        <p class="text-muted">
                            Si tienes preguntas, porfavor @Html.ActionLink("contactenos", "Contact", "NavBar")
                            , nuestro servicio de atención al cliente funciona 24/7.
                        </p>
                        <hr>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="editor-field">
                                @Html.LabelFor(f => f.UserName, new { @class = "control-label" })

                                @Html.TextBoxFor(f => f.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(f => f.UserName)
                            </div>

                            <div class="editor-field">
                                @Html.LabelFor(f => f.Nombre, new { @class = "control-label" })

                                @Html.TextBoxFor(f => f.Nombre, new { @class = "form-control" })
                                @Html.ValidationMessageFor(f => f.Nombre)
                            </div>
                            <div class="editor-field">
                                @Html.LabelFor(f => f.Apellido, new { @class = "control-label" })

                                @Html.TextBoxFor(f => f.Apellido, new { @class = "form-control" })
                                @Html.ValidationMessageFor(f => f.Apellido)
                            </div>
                            <div class="editor-field">
                                @Html.LabelFor(f => f.DNI, new { @class = "control-label" })

                                @Html.TextBoxFor(f => f.DNI, new { @class = "form-control" })
                                @Html.ValidationMessageFor(f => f.DNI)
                            </div>
                            <div class="editor-field">
                                @Html.LabelFor(f => f.Telefono, new { @class = "control-label" })

                                @Html.TextBoxFor(f => f.Telefono, new { @class = "form-control" })
                                @Html.ValidationMessageFor(f => f.Telefono)
                            </div>
                            <div class="editor-field">
                                @Html.LabelFor(f => f.UserEmail, new { @class = "control-label" })

                                @Html.TextBoxFor(f => f.UserEmail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(f => f.UserEmail)
                            </div>
                            <div class="editor-field">
                                @Html.LabelFor(f => f.Password, new { @class = "control-label" })

                                @Html.PasswordFor(f => f.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(f => f.Password)
                            </div>
                            <div class="editor-field">
                                @Html.LabelFor(f => f.PasswordConfirmation, new { @class = "control-label" })

                                @Html.PasswordFor(f => f.PasswordConfirmation, new { @class = "form-control" })
                                @Html.ValidationMessageFor(f => f.PasswordConfirmation)
                            </div>
                            <div class="editor-field">
                                @Html.LabelFor(f => f.Direccion, new { @class = "control-label" })

                                @Html.TextBoxFor(f => f.Direccion, new { @class = "form-control" })
                                @Html.ValidationMessageFor(f => f.Direccion)
                            </div>
                            <div class="editor-field">
                                @Html.LabelFor(f => f.CodigoPostal, new { @class = "control-label" })

                                @Html.TextBoxFor(f => f.CodigoPostal, new { @class = "form-control" })
                                @Html.ValidationMessageFor(f => f.CodigoPostal)
                            </div>
                            <div class="editor-field">
                                @Html.LabelFor(f => f.idLocalidad, "Localidad", htmlAttributes: new { @class = "control-label" })

                                @Html.DropDownList("idLocalidad", null, htmlAttributes: new { @class = "form -control" })
                                @Html.ValidationMessageFor(f => f.idLocalidad)
                            </div>



                            <div class="text-center">
                                <input type="submit" value="Registrarse" formaction="@Url.Action("CustomerRegister", "Account")" class="btn btn-template-outlined">
                            </div>
                        }
                    </div>
