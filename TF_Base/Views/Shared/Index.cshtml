@model IEnumerable<TF_Base.Models.Producto>

@{
    ViewBag.Title = "Inicio - LaCosta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                <div id="carousel-example-generic" class="carousel slide">
                    <!-- Indicators -->
                    <ol class="carousel-indicators hidden-xs">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="3"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="img-responsive img-full" src="~/Content/images/bannerImg1.png" alt="">
                        </div>
                        <div class="item">
                            <img class="img-responsive img-full" src="~/Content/images/bannerImg2.png" alt="">
                        </div>
                        <div class="item">
                            <img class="img-responsive img-full" src="~/Content/images/bannerImg3.png" alt="">
                        </div>
                        <div class="item">
                            <img class="img-responsive img-full" src="~/Content/images/bannerImg4.png" alt="">
                        </div>

                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="icon-prev"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="icon-next"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <br /><br />
    <!--Destacados Start-->
    <section class="bar background-white no-mb">
        <div data-animate="fadeInUpBig" class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="heading text-center">
                        <h2>Productos destacados</h2>
                    </div>
                    <div class="row portfolio text-center color-white">
                        <div class="col-md-4">
                            <div class="box-image">
                                <div class="image">
                                    <img src="~/Content/images/pantalon-chupin.jpg" alt="" class="img-fluid">
                                    <div class="overlay d-flex align-items-center justify-content-center">
                                        <div class="content">
                                            <div class="name">
                                                <h2>
                                                    <a href="portfolio-detail.html" class="color-white">Pantalon chupin</a>
                                                </h2>
                                            </div>
                                            <div class="text">
                                                <p class="buttons">
                                                    <a href="shop-category-left.html" class="btn btn-template-outlined-white">Ver</a>
                                                    <a href="#" class="btn btn-template-outlined-white">Agregar al carrito</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="box-image">
                                <div class="image">
                                    <img src="~/Content/images/campera-termica.jpg" alt="" class="img-fluid">
                                    <div class="overlay d-flex align-items-center justify-content-center">
                                        <div class="content">
                                            <div class="name">
                                                <h2>
                                                    <a href="portfolio-detail.html" class="color-white">Campera térmica</a>
                                                </h2>
                                            </div>
                                            <div class="text">
                                                <p class="buttons">
                                                    <a href="shop-detail.html" class="btn btn-template-outlined-white">Ver</a>
                                                    <a href="#" class="btn btn-template-outlined-white">Agregar al carrito</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="box-image">
                                <div class="image">
                                    <img src="~/Content/images/campera-rayada-nino.jpg" alt="" class="img-fluid">
                                    <div class="overlay d-flex align-items-center justify-content-center">
                                        <div class="content">
                                            <div class="name">
                                                <h2>
                                                    <a href="portfolio-detail.html" class="color-white">Campera a rayas de niño</a>
                                                </h2>
                                            </div>
                                            <div class="text">
                                                <p class="buttons">
                                                    <a href="shop-category-left.html" class="btn btn-template-outlined-white">Ver</a>
                                                    <a href="#" class="btn btn-template-outlined-white">Agregar al carrito</a>
                                                </p>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Destacados End-->
    <br /><br /><br />
    <!--Caracteristicas Start-->
    <section class="bar background-pentagon no-mb">
        <div class="container">
            <div class="row showcase text-center">
                <div class="col-md-4 col-sm-6">
                    <div class="item" style="padding:10px;">
                        <div class="icon-outlined icon icon-thin ">
                            <i class="glyphicon glyphicon-send "></i>
                        </div>
                        <h4>
                            Envíos gratis a tu casa
                            <br> para compras de más de $1500
                        </h4>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="item" style="padding:10px;">
                        <div class="icon-outlined icon icon-thin">
                            <i class="glyphicon glyphicon-credit-card"></i>
                        </div>
                        <h4>
                            Hasta 12 cuotas sin interés
                            <br> a través de MercadoPago
                        </h4>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="item" style="padding:10px;">
                        <div class="icon-outlined icon icon-thin">
                            <i class="glyphicon glyphicon-lock"></i>
                        </div>
                        <h4>
                            Sitio seguro
                            <br>Protegemos tus datos
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Caracteristicas End-->
</div>

@section scripts
{
    <script>
        // Activates the Carousel
        $('.carousel').carousel({
            interval: 3000
        })
    </script>
}