@model IEnumerable<TF_Base.Models.Producto>

@{
    ViewBag.Title = "CustomerWishlist";
    Layout = "~/Views/Shared/_eCommerceLayout.cshtml";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Mi lista de deseos</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item"><a href="@Url.Action("Home","Shared")">Inicio</a></li>
                    <li class="breadcrumb-item active">Lista de deseos</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row bar">
            <div class="col-lg-9">
                <p class="lead">Llevate todo aquello que alguna vez quisiste pero que no compraste !.</p>
                <div class="row products">
                    @if (Model.Count() > 0)
                    {
                        foreach (var sarasa in Model)
                        {
                            <div class="col-lg-3 col-md-4">
                                <div class="product">
                                    <div class="image">
                                        <a href="@Url.Action("ShopDetail", "Producto", new { id = sarasa.idProducto })">
                                            <img src="@Url.Content(sarasa.ImagenProducto.FirstOrDefault().url)" alt="Image" class="img-fluid image1">
                                        </a>
                                    </div>
                                    <div class="text">
                                        <h3 class="h5">
                                            <a href="@Url.Action("ShopDetail", "Producto", new { id = sarasa.idProducto })">
                                                @sarasa.descripcion @sarasa.Color.descripcion 
                                            </a>
                                        </h3>
                                        <p class="price">$ @sarasa.precioUnitario</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-lg-6 col-md-4">
                            <p>Todavia no elegiste ningun producto que te guste</p>
                        </div>
                    }

                </div>
            </div>
            <div class="col-lg-3 mt-4 mt-lg-0">
                <!-- CUSTOMER MENU -->
                <div class="panel panel-default sidebar-menu">
                    <div class="panel-heading">
                        <h3 class="h4 panel-title">Seccion de cliente</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="nav nav-pills flex-column text-sm">
                            <li class="nav-item"><a href="@Url.Action("CustomerOrders","Usuario")" class="nav-link"><i class="fa fa-list"></i> Mis pedidos</a></li>
                            <li class="nav-item"><a href="@Url.Action("CustomerWishlist","Usuario")" class="nav-link active"><i class="fa fa-heart"></i> Mi lista de deseos</a></li>
                            <li class="nav-item"><a href="@Url.Action("CustomerAccount", "Usuario")" class="nav-link"><i class="fa fa-user"></i> Mi cuenta</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>