@model TF_Base.Models.OrdenCompra

@{
    ViewBag.Title = "CustomerOrder";
    Layout = "~/Views/Shared/_eCommerceLayout.cshtml";
}

<div id="all">
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row d-flex align-items-center flex-wrap">
                <div class="col-md-7">
                    <h1 class="h2">Orden #@Model.idOrdenCompra</h1>
                </div>
                <div class="col-md-5">
                    <ul class="breadcrumb d-flex justify-content-end">
                        <li class="breadcrumb-item">
                            @Html.ActionLink("Inicio", "Home", "Shared")
                        </li>
                        <li class="breadcrumb-item">
                            @Html.ActionLink("Mis compras", "CustomerOrders", "Usuario")
                        </li>
                        <li class="breadcrumb-item active">Orden #@Model.idOrdenCompra</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="content">
        <div class="container">
            <div class="row bar">
                <div id="customer-order" class="col-lg-9">
                    <p class="lead">
                        <strong> Su orden se encuentra en estado @Model.OrdenCompraEstado.descripcion. </strong>
                    </p>
                    <p class="lead text-muted">
                        Si tienes alguna consulta, por favor @Html.ActionLink("contactenos", "Contact", "Shared"), nuestro servicio de atención al cliente funciona 24/7.
                    </p>
                    <div class="box">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th colspan="2" class="border-top-0">Producto</th>
                                        <th class="border-top-0">Cantidad</th>
                                        <th class="border-top-0">Precio unitario</th>

                                        <th class="border-top-0">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detalle in Model.OrdenCompraDetalle)
                                    {
                                        <tr>
                                            <td>
                                                <a href="#">
                                                    <img src="@Url.Content(detalle.Producto.ImagenProducto.FirstOrDefault().url)" alt="Producto" class="img-fluid">
                                                </a>
                                            </td>
                                            <td>
                                                <a href="#">@detalle.Producto.descripcion</a>
                                            </td>
                                            <td>@detalle.cantidad</td>
                                            <td>$@detalle.Producto.precioUnitario</td>

                                            <td>$@(detalle.cantidad * detalle.Producto.precioUnitario)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="row col-md-12">
                                <div class="col-md-10 text-right">Orden subtotal</div>
                                <div class="text-right">$@Model.OrdenCompraDetalle.Sum(ocd => ocd.cantidad * ocd.Producto.precioUnitario).ToString("N2")</div>
                            </div>
                            <div class="row col-md-12">
                                <div class="col-md-10 text-right">
                                    Envio y traslado
                                </div>
                                <div class="text-right">$@Model.OrdenCompraEnvio.OrderByDescending(o => o.idOrdenCompraEnvio).FirstOrDefault().Envio.costoEnvio</div>
                            </div>
                            <div class="row col-md-12">
                                <div class="col-md-10 text-right">Impuestos</div>
                                <div class="text-right">$@((Model.OrdenCompraDetalle.Sum(ocd => ocd.Producto.precioUnitario * ocd.cantidad) * 0.21m).ToString("N2"))</div>
                            </div>
                            @if (Model.Cupon != null)
                            {
                                <div class="row col-md-12">
                                    <div class="col-md-10 text-right">Descuentos</div>
                                    <div class="text-right">
                                        $@((Model.OrdenCompraDetalle.Sum(ocd => ocd.Producto.precioUnitario * ocd.cantidad) * (Convert.ToDecimal(Model.Cupon.porcentajeDescuento) / 100)).ToString("N2"))
                                    </div>
                                </div>
                                <div class="row col-md-12">
                                    <div class="col-md-10 text-right">Total</div>
                                    <div class="text-right">
                                        $@(((
                                                                 (Model.OrdenCompraDetalle.Sum(ocd => ocd.Producto.precioUnitario * ocd.cantidad) * 1.21m
                                                                 + Model.OrdenCompraEnvio.OrderByDescending(o => o.idOrdenCompraEnvio).FirstOrDefault().Envio.costoEnvio)
                                                                 ) -
                                                                 (
                                                                 Model.OrdenCompraDetalle.Sum(ocd => ocd.Producto.precioUnitario * ocd.cantidad) * 1.21m
                                                                 + Model.OrdenCompraEnvio.OrderByDescending(o => o.idOrdenCompraEnvio).FirstOrDefault().Envio.costoEnvio)
                                                                 * (Convert.ToDecimal(Model.Cupon.porcentajeDescuento) / 100
                                                                 )).ToString("N2")
                                        )
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="row col-md-12">
                                    <div class="col-md-10 text-right">Descuentos</div>
                                    <div class="text-right">
                                        $@((Model.OrdenCompraDetalle.Sum(ocd => ocd.Producto.precioUnitario * ocd.cantidad) * 0))
                                    </div>
                                </div>
                                <div class="row col-md-12">
                                    <div class="col-md-10 text-right">Total</div>
                                    <div class="text-right">$@((Model.OrdenCompraDetalle.Sum(ocd => ocd.Producto.precioUnitario * ocd.cantidad) * 1.21m + Model.OrdenCompraEnvio.OrderByDescending(o => o.idOrdenCompraEnvio).FirstOrDefault().Envio.costoEnvio).ToString("N2"))</div>
                                </div>
                            }
                        </div>
                    </div>
                    @if (Model.OrdenCompraEnvio.Any())
                    {
                        <div class="row addresses">
                            <div class="col-md-12 text-center">
                                <h3 class="text-uppercase">Dirección de envío</h3>
                                <p>
                                    <h5>
                                        Retira  @Model.OrdenCompraEnvio.OrderByDescending(e => e.idEnvio).First().Envio.nombre @Model.OrdenCompraEnvio.OrderByDescending(e => e.idEnvio).First().Envio.apellido
                                    </h5>
                                    
                                    <h5>
                                        En @Model.OrdenCompraEnvio.OrderByDescending(e => e.idEnvio).First().Envio.Direccion.direccion1
                                    </h5>
                                    
                                    <h5>
                                        Ciudad @Model.OrdenCompraEnvio.OrderByDescending(e => e.idEnvio).First().Envio.Direccion.Localidad.localidad1
                                    </h5>
                                </p>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-lg-3 mt-4 mt-lg-0">
                    <!-- CUSTOMER MENU -->
                    <div class="panel panel-default sidebar-menu">
                        <div class="panel-heading">
                            <h3 class="h4 panel-title">Seccion de cliente</h3>
                        </div>
                        <div class="panel-body">
                            <ul class="nav nav-pills flex-column text-sm">
                                <li class="nav-item"><a href="@Url.Action("CustomerOrders","Usuario")" class="nav-link"><i class="fa fa-list"></i> Mis pedidos</a></li>
                                <li class="nav-item"><a href="@Url.Action("CustomerWishlist","Usuario")" class="nav-link"><i class="fa fa-heart"></i> Mi lista de deseos</a></li>
                                <li class="nav-item"><a href="@Url.Action("CustomerAccount", "Usuario")" class="nav-link"><i class="fa fa-user"></i> Mi cuenta</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
