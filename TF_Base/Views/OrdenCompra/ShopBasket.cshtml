@model TF_Base.Models.OrdenCompra

@{
    ViewBag.Title = "ShopBasket";
    Layout = "~/Views/Shared/_eCommerceLayout.cshtml";
}

<div id="all">
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row d-flex align-items-center flex-wrap">
                <div class="col-md-7">
                    <h1 class="h2">Carrito de compras</h1>
                </div>
                <div class="col-md-5">
                    <ul class="breadcrumb d-flex justify-content-end">
                        <li class="breadcrumb-item">
                            @Html.ActionLink("Inicio", "Home", "Shared")
                        </li>
                        <li class="breadcrumb-item active">Carrito de compras</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="content">
        <div class="container">
            <div class="row bar">
                <div class="col-lg-12">
                    <p class="text-muted lead">Actualmente tenés @Model.OrdenCompraDetalle.Sum(ocd => ocd.cantidad) elementos en tu carrito.</p>
                </div>
                <div id="basket" class="col-lg-9">
                    <div class="box mt-0 pb-0 no-horizontal-padding">
                        <form method="get" action="shop-checkout1.html">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th colspan="2">Producto</th>
                                            <th>Cantidad</th>
                                            <th>Precio Unitario</th>
                                            <th>Descuento</th>
                                            <th colspan="2">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detalle in Model.OrdenCompraDetalle)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="#">
                                                        <img src="@Url.Content(detalle.Producto.ImagenProducto.First().url)" alt="@detalle.Producto.descripcion" class="img-fluid">
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="#">@detalle.Producto.descripcion</a>
                                                </td>
                                                <td>
                                                    @Html.TextBox("cantidad", detalle.cantidad.ToString(), new { @class = "form-control" })
                                                </td>
                                                <td>$ @detalle.Producto.precioUnitario</td>
                                                <td>$0.00</td>
                                                <td>$ @(detalle.Producto.precioUnitario * detalle.cantidad)</td>
                                                <td>
                                                    <a href="@Url.Action("DeleteDetalle", new { id = detalle.idDetalleOrden }) ">
                                                        <i class="fa fa-trash-o"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="5">Total</th>
                                            <th colspan="2">$ @Model.OrdenCompraDetalle.Sum(ocd => ocd.cantidad * ocd.Producto.precioUnitario)</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="box-footer d-flex justify-content-between align-items-center">
                                <div class="left-col">
                                    <a href="@Url.Action("ShopCategory","Producto")" class="btn btn-secondary mt-0">
                                        <i class="fa fa-chevron-left"></i> CONTINUAR COMPRANDO
                                    </a>
                                </div>
                                <div class="right-col">
                                    <button class="btn btn-secondary">
                                        <i class="fa fa-refresh"></i> ACTUALIZAR CARRITO
                                    </button>

                                    <a href="@Url.Action("ShopCheckoutStep1","OrdenCompra", new { id = Model.idOrdenCompra })" class="btn btn-template-outlined">
                                        Pasar por la caja
                                        <i class="fa fa-chevron-right"></i>
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-6">
                            <div class="box text-uppercase mt-0 mb-2">
                                <h3>You may also like these products</h3>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="product">
                                <div class="image">
                                    <a href="@Url.Action("ShopDetail", "Producto")">
                                        <img src="img/product2.jpg" alt="" class="img-fluid image1">
                                    </a>
                                </div>
                                <div class="text">
                                    <h3 class="h5">
                                        <a href="@Url.Action("ShopDetail", "Producto")">
                                            <img src="img/product2.jpg" alt="" class="img-fluid image1"> Fur coat
                                        </a>
                                    </h3>
                                    <p class="price">$143</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="product">
                                <div class="image">
                                    <a href="@Url.Action("ShopDetail", "Producto")">
                                        <img src="img/product3.jpg" alt="" class="img-fluid image1">
                                    </a>
                                </div>
                                <div class="text">
                                    <h3 class="h5">
                                        <a href="@Url.Action("ShopDetail", "Producto")">
                                            Fur coat
                                        </a>
                                    </h3>
                                    <p class="price">$143</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="product">
                                <div class="image">
                                    <a href="@Url.Action("ShopDetail", "Producto")">
                                        <img src="img/product1.jpg" alt="" class="img-fluid image1">
                                    </a>
                                </div>
                                <div class="text">
                                    <h3 class="h5">
                                        <a href="@Url.Action("ShopDetail", "Producto")">Fur coat</a>
                                    </h3>
                                    <p class="price">$143</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div id="order-summary" class="box mt-0 mb-4 p-0">
                        <div class="box-header mt-0">
                            <h3>Resumen de la orden</h3>
                        </div>
                        <p class="text-muted">El envío y los costos adicionales se calculan en función de los valores que ha ingresado.</p>
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>Subtotal</td>
                                        <th>$ @Model.OrdenCompraDetalle.Sum(ocd => ocd.cantidad * ocd.Producto.precioUnitario)</th>
                                    </tr>
                                    <tr>
                                        <td>Envío y traslado</td>
                                        <th>$ 0.00</th>
                                    </tr>
                                    <tr class="total">
                                        <td>Total</td>
                                        <th>$ @Model.OrdenCompraDetalle.Sum(ocd => ocd.cantidad * ocd.Producto.precioUnitario)</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="box box mt-0 mb-4 p-0">
                        <div class="box-header mt-0">
                            <h4>Código Promocional</h4>
                        </div>
                        <p class="text-muted">Si tenés un cupón de descuento, ingresalo en el siguiente cuadro.</p>
                        <form>
                            <div class="input-group">
                                <input type="text" class="form-control">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-template-main">
                                        <i class="fa fa-gift"></i>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>